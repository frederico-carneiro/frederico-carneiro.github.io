---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../content/site-config.json';

const { personal, expertise, tools } = siteConfig;
---

<BaseLayout title="About" description={personal.statement}>
  <main class="about-page">
    <section class="section hero-section hero-with-bg">
      <div class="hero-bg">
        <img src="/images/about-bg.png" alt="" loading="eager" />
      </div>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <div class="container">
          <div class="about-header">
            <div class="profile-image">
              <img src="/images/profile.png" alt="Frederico Carneiro" />
            </div>
            <div class="about-intro">
              <h1>{personal.name}</h1>
              <p class="title">{personal.title}</p>
              <p class="specialization">{personal.specialization}</p>
            </div>
          </div>
        </div>

        <div class="container container--narrow">
          <div class="about-content">
            <h2>Background</h2>
            <p class="statement">Art Director and Senior Artist with 7+ years of experience, specializing in environment, level, and weapon art, with hands-on expertise in Unreal Engine 5.</p>

            <p class="bio">Over the course of my career, I've worked across multiple disciplinesâ€”from hands-on asset production to leading art teams and shaping visual direction. My focus is on delivering production-ready work that balances visual quality, gameplay readability, and real-time performance.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Work Experience Timeline -->
    <section class="section timeline-section">
      <div class="container">
        <h2 class="timeline-title">Experience</h2>
        <div class="timeline">
          <div class="timeline-line"></div>

          <!-- Reikon Games - Associate Art Director -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2023 - Present</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Associate Art Director</p>
            </div>
          </div>

          <!-- Reikon Games - Lead 3D Artist -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2021 - Present</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Lead 3D Artist, Lead Weapon Artist</p>
            </div>
          </div>

          <!-- Reikon Games - Lead Prop Artist -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2020 - 2021</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Lead Prop Artist</p>
            </div>
          </div>

          <!-- UNIT9 -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2018</span>
              <h3 class="timeline-company">UNIT9</h3>
              <p class="timeline-role">3D Artist</p>
            </div>
          </div>

          <!-- SwingDev - 3D Artist -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2017 - 2018</span>
              <h3 class="timeline-company">SWINGDEV</h3>
              <p class="timeline-role">3D Artist</p>
            </div>
          </div>

          <!-- SwingDev - Junior -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2017</span>
              <h3 class="timeline-company">SWINGDEV</h3>
              <p class="timeline-role">Junior 3D Artist</p>
              <p class="timeline-note">Internship</p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <section class="section section--alt">
      <div class="container container--narrow cta-section">
        <h2>Let's Work Together</h2>
        <p>Open to new opportunities and collaborations.</p>
        <a href="/contact" class="btn btn-primary">Get in Touch</a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .about-page {
    padding-top: 64px;
  }

  .section {
    padding: var(--spacing-xl) 0;
  }

  .section--alt {
    background-color: var(--bg-secondary);
  }

  /* Hero Section */
  .hero-section {
    padding: var(--spacing-2xl) 0 var(--spacing-md) 0;
  }

  .hero-with-bg {
    position: relative;
    padding: var(--spacing-2xl) 0;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: rgba(14, 15, 17, 0.8);
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .about-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .profile-image {
    flex-shrink: 0;
  }

  .profile-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 35%;
    border: 3px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .about-intro h1 {
    margin-bottom: var(--spacing-xs);
  }

  .title {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xs);
  }

  .specialization {
    font-size: var(--font-size-base);
    color: var(--text-muted);
    margin-bottom: var(--spacing-2xl);
  }

  /* Content */
  .about-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .statement {
    font-size: var(--font-size-xl);
    color: var(--text-primary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-md);
  }

  .bio {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  /* Expertise */
  .expertise-list {
    display: grid;
    gap: var(--spacing-sm);
  }

  .expertise-list li {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    padding-left: var(--spacing-md);
    position: relative;
  }

  .expertise-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 8px;
    height: 2px;
    background-color: var(--text-muted);
  }

  /* Tools */
  .tools-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tool-tag {
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  /* Timeline Section */
  .timeline-section {
    background-color: var(--bg-secondary);
    padding: var(--spacing-2xl) 0;
  }

  .timeline-title {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-md) 0;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background-color: #4CAF50;
  }

  .timeline-item {
    position: relative;
    width: 50%;
    padding: var(--spacing-md);
  }

  .timeline-item.left {
    left: 0;
    text-align: right;
    padding-right: var(--spacing-xl);
  }

  .timeline-item.right {
    left: 50%;
    text-align: left;
    padding-left: var(--spacing-xl);
  }

  .timeline-dot {
    position: absolute;
    width: 14px;
    height: 14px;
    background-color: #4CAF50;
    border-radius: 50%;
    top: var(--spacing-md);
  }

  .timeline-item.left .timeline-dot {
    right: -7px;
  }

  .timeline-item.right .timeline-dot {
    left: -7px;
  }

  .timeline-date {
    display: block;
    font-size: var(--font-size-sm);
    color: #4CAF50;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-company {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-role {
    font-size: var(--font-size-base);
    color: var(--text-secondary);
    font-weight: var(--font-weight-medium);
  }

  .timeline-note {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    font-style: italic;
    margin-top: var(--spacing-xs);
  }

  @media (max-width: 768px) {
    .timeline-line {
      left: 20px;
    }

    .timeline-item {
      width: 100%;
      padding-left: 50px;
      padding-right: 0;
      text-align: left;
    }

    .timeline-item.left,
    .timeline-item.right {
      left: 0;
      text-align: left;
      padding-left: 50px;
      padding-right: var(--spacing-md);
    }

    .timeline-item.left .timeline-dot,
    .timeline-item.right .timeline-dot {
      left: 13px;
      right: auto;
    }
  }

  /* CTA Section */
  .cta-section {
    text-align: center;
  }

  .cta-section h2 {
    margin-bottom: var(--spacing-sm);
  }

  .cta-section p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .about-header {
      flex-direction: column;
      text-align: center;
    }

    .profile-placeholder {
      width: 120px;
      height: 120px;
      font-size: var(--font-size-3xl);
    }
  }
</style>
