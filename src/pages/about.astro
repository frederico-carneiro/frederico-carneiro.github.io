---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../content/site-config.json';

const { personal, expertise, tools } = siteConfig;
---

<BaseLayout title="About" description={personal.statement}>
  <main class="about-page">
    <section class="section hero-section hero-with-bg">
      <div class="hero-bg">
        <img src="/images/about-bg.webp" alt="" loading="eager" width="3840" height="1600" />
      </div>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <div class="container">
          <div class="about-header">
            <div class="profile-image">
              <img src="/images/profile.webp" alt="Frederico Carneiro" width="1170" height="2532" />
            </div>
            <div class="about-intro">
              <h1>{personal.name}</h1>
              <p class="title">Associate Art Director | Lead & Senior Artist</p>
              <a href="/Frederico-Carneiro-CV-Associate-Art-Director.pdf" target="_blank" rel="noopener noreferrer" class="cv-download">Download CV ↓</a>
            </div>
          </div>
        </div>

        <div class="container">
          <div class="about-content" data-reveal>
            <h2>Background</h2>
            <p class="statement">Associate Art Director and Lead & Senior Artist with 7+ years of experience, specializing in Environment, Weapons and 3D Art with hands-on expertise in Unreal Engine 5.</p>

            <p class="statement">Experience in defining visual direction, establishing efficient art pipelines, and delivering high-quality visuals. Closely work with designers, programmers, and production teams to meet visual, gameplay, and technical requirements while maintaining consistency across all stages of development.</p>

            <p class="statement">Passionate about creating immersive and visually rich worlds that elevate the player experience.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Work Experience Timeline -->
    <section class="section timeline-section">
      <div class="container">
        <h2 class="timeline-title" data-reveal>Experience</h2>
        <div class="timeline" data-reveal-stagger>
          <div class="timeline-line"></div>

          <!-- Reikon Games - Associate Art Director -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2023 - Present</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Associate Art Director</p>
            </div>
          </div>

          <!-- Reikon Games - Lead Weapon/Environment/Level Artist -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2023 - Present</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Lead Environment Artist</p>
              <p class="timeline-role">Lead Weapon Artist</p>
              <p class="timeline-role">Principal Level Artist</p>
            </div>
          </div>

          <!-- Reikon Games - Lead 3D Artist -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2021 - 2023</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Lead 3D Artist</p>
            </div>
          </div>

          <!-- Reikon Games - Lead Prop Artist -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2020 - 2021</span>
              <h3 class="timeline-company">REIKON GAMES</h3>
              <p class="timeline-role">Lead Prop Artist</p>
            </div>
          </div>

          <!-- UNIT9 -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2018</span>
              <h3 class="timeline-company">UNIT9</h3>
              <p class="timeline-role">3D Artist</p>
            </div>
          </div>

          <!-- SwingDev - 3D Artist -->
          <div class="timeline-item right">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2017 - 2018</span>
              <h3 class="timeline-company">SWINGDEV</h3>
              <p class="timeline-role">3D Artist</p>
            </div>
          </div>

          <!-- SwingDev - Junior -->
          <div class="timeline-item left">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-date">2017</span>
              <h3 class="timeline-company">SWINGDEV</h3>
              <p class="timeline-role">Junior 3D Artist</p>
              <p class="timeline-note">Internship</p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Leadership & Direction -->
    <section id="leadership" class="section leadership-section">
      <div class="container">
        <div class="container--narrow leadership-overview" data-reveal>
          <h2 class="section-title text-center">Leadership &amp; Direction</h2>
          <p class="overview-text">
            At Reikon Games, I progressively took on leadership roles across multiple disciplines, contributing to visual direction, efficient art pipelines and team development for large-scale production.
          </p>
          <p class="overview-text">
            I worked closely with design, gameplay and production teams to meet visual, gameplay and technical requirements while maintaining consistent artistic quality across all stages of development. I place strong emphasis on mentorship, collaboration and building teams capable of delivering high-quality visuals.
          </p>
        </div>

        <div class="role-grid" data-reveal-stagger>
          <div class="role-card">
            <h3>Associate Art Director</h3>
            <ul>
              <li>Defined and maintained overall visual direction alongside the Art Director</li>
              <li>Ensured artistic consistency across environments, props, weapons, VFX, and animation</li>
              <li>Reviewed and provided feedback, alongside the Art Director, to a team of 30+ artists, maintaining project visual direction</li>
            </ul>
          </div>
          <div class="role-card">
            <h3>Lead 3D Artist</h3>
            <ul>
              <li>Led 3D art team of 6 artists, scaling from a solo role</li>
              <li>Provided ongoing, targeted feedback and reviews to maintain quality and consistency</li>
              <li>Mentored junior and mid-level artists, supporting skill growth and confidence</li>
              <li>Established quality benchmarks and style guides through documentation and presentations</li>
              <li>Planned and managed task assignments, priorities, and sprint workflows alongside production</li>
            </ul>
          </div>
          <div class="role-card">
            <h3>Lead Environment Art</h3>
            <ul>
              <li>Directed environment art production across all game maps</li>
              <li>Established modular workflows and asset libraries with the team</li>
              <li>Balanced visual quality with performance budgets</li>
              <li>Collaborated closely with level and gameplay designers</li>
            </ul>
          </div>
          <div class="role-card">
            <h3>Lead Weapon Art</h3>
            <ul>
              <li>Oversaw weapon art pipeline from concept to in-engine</li>
              <li>Coordinated with concept, gameplay, VFX, animation, tech art and production to support gameplay needs</li>
              <li>Defined and maintained weapon art standards, workflows and quality benchmarks</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Hiring & Team Scaling -->
    <section class="section section--alt">
      <div class="container">
        <div class="scaling-layout">
          <div class="scaling-text" data-reveal>
            <h2 class="section-title">Hiring &amp; Team Scaling</h2>
            <p>
              Played a key role in scaling the studio from a small team to a full, production-ready art department. Contributed to the hiring process by reviewing portfolios, conducting art tests and participating in interviews.
            </p>
            <p>
              Helped build a high-performing art team by identifying talent aligned with the studio's visual standards and collaborative culture, supporting the studio's growth during a critical expansion phase.
            </p>
          </div>
          <div class="scaling-stats" data-reveal-stagger>
            <div class="stat-block">
              <span class="stat-value">30 <span class="stat-arrow">→</span> 120</span>
              <span class="stat-label">Studio Growth (Developers)</span>
            </div>
            <div class="stat-block">
              <span class="stat-value" data-count-to="30" data-count-suffix="+">30+</span>
              <span class="stat-label">Art Team at Peak</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mentorship & Development -->
    <section class="section mentorship-section">
      <div class="container container--narrow">
        <h2 class="section-title text-center" data-reveal>Mentorship &amp; Development</h2>
        <ul class="mentorship-list" data-reveal-stagger>
          <li>Onboarded and mentored junior and mid-level artists, helping them grow into confident contributors</li>
          <li>Provided regular, constructive feedback through structured reviews and informal check-ins</li>
          <li>Created reference guides, documentation, and best-practice materials for the art team</li>
          <li>Encouraged knowledge sharing through internal presentations and peer reviews</li>
          <li>Advocated for professional development opportunities and skill growth within the team</li>
        </ul>
      </div>
    </section>

    <section class="section section--alt">
      <div class="container container--narrow cta-section" data-reveal>
        <h2>Let's Work Together</h2>
        <p>Open to new opportunities and collaborations.</p>
        <a href="/contact" class="btn btn-primary">Get in Touch</a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .about-page {
    padding-top: 64px;
  }

  .section {
    padding: var(--spacing-xl) 0;
  }

  .section--alt {
    background-color: var(--bg-secondary);
  }

  /* Hero Section */
  .hero-section {
    padding: var(--spacing-2xl) 0 var(--spacing-md) 0;
  }

  .hero-with-bg {
    position: relative;
    padding: var(--spacing-2xl) 0;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: rgba(14, 15, 17, 0.8);
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .about-header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-lg);
  }

  .profile-image {
    flex-shrink: 0;
  }

  .profile-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 35%;
    border: 3px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .about-intro h1 {
    margin-bottom: var(--spacing-xs);
  }

  .title {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-sm);
  }

  .cv-download {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 6px 16px;
    border-radius: var(--radius-md);
    transition: color var(--transition-fast), border-color var(--transition-fast);
  }

  .cv-download:hover {
    color: var(--text-primary);
    border-color: var(--accent);
  }

  .specialization {
    font-size: var(--font-size-base);
    color: rgba(255, 255, 255, 0.6);
    margin-top: -6px;
    margin-bottom: var(--spacing-2xl);
  }

  /* Content */
  .about-content {
    margin-top: 40px;
  }

  .about-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .statement {
    font-size: var(--font-size-xl);
    color: var(--text-primary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-md);
  }

  .bio {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  /* Timeline Section */
  .timeline-section {
    background-color: var(--bg-secondary);
    padding: var(--spacing-2xl) 0;
  }

  .timeline-title {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-md) 0;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background-color: var(--accent);
  }

  .timeline-item {
    position: relative;
    width: 50%;
    padding: var(--spacing-md);
  }

  .timeline-item.left {
    left: 0;
    text-align: right;
    padding-right: var(--spacing-xl);
  }

  .timeline-item.right {
    left: 50%;
    text-align: left;
    padding-left: var(--spacing-xl);
  }

  .timeline-dot {
    position: absolute;
    width: 14px;
    height: 14px;
    background-color: var(--accent);
    border-radius: 50%;
    top: var(--spacing-md);
  }

  .timeline-item.left .timeline-dot {
    right: -7px;
  }

  .timeline-item.right .timeline-dot {
    left: -7px;
  }

  .timeline-date {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--accent);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-company {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-role {
    font-size: var(--font-size-base);
    color: var(--text-secondary);
    font-weight: var(--font-weight-medium);
    line-height: 1.4;
  }

  .timeline-role + .timeline-role {
    margin-top: 2px;
  }

  .timeline-note {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    font-style: italic;
    margin-top: var(--spacing-xs);
  }

  @media (max-width: 768px) {
    .timeline-line {
      left: 20px;
    }

    .timeline-item {
      width: 100%;
      padding-left: 50px;
      padding-right: 0;
      text-align: left;
    }

    .timeline-item.left,
    .timeline-item.right {
      left: 0;
      text-align: left;
      padding-left: 50px;
      padding-right: var(--spacing-md);
    }

    .timeline-item.left .timeline-dot,
    .timeline-item.right .timeline-dot {
      left: 13px;
      right: auto;
    }
  }

  /* Leadership Section */
  .leadership-section {
    background-color: var(--bg-primary);
  }

  .leadership-overview {
    margin: 0 auto var(--spacing-lg);
  }

  .overview-text {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-sm);
  }

  .overview-text:last-child {
    margin-bottom: 0;
  }

/* Role Grid */
  .role-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .role-card {
    background-color: var(--bg-secondary);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    border-top: 2px solid var(--accent);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .role-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(107, 159, 207, 0.1);
  }

  .role-card h3 {
    font-size: var(--font-size-base);
    margin-bottom: var(--spacing-sm);
    color: var(--text-primary);
  }

  .role-card ul {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .role-card li {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    padding-left: var(--spacing-sm);
    position: relative;
  }

  .role-card li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 2px;
    background-color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .role-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Hiring & Team Scaling */
  .scaling-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .scaling-text p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .scaling-text p + p {
    margin-top: var(--spacing-sm);
  }

  .scaling-stats {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .stat-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-arrow {
    color: var(--text-muted);
    margin: 0 0.1em;
  }

  .stat-block .stat-value {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-weight-bold);
    color: var(--accent);
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin-bottom: var(--spacing-xs);
  }

  .stat-block .stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .scaling-layout {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .scaling-stats {
      flex-direction: row;
      justify-content: space-around;
    }
  }

  @media (max-width: 480px) {
    .scaling-stats {
      flex-direction: column;
    }
  }

  /* Mentorship */
  .mentorship-section {
    background-color: var(--bg-primary);
  }

  .mentorship-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
  }

  .mentorship-list li {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    padding-left: var(--spacing-md);
    position: relative;
  }

  .mentorship-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--accent);
  }

  /* CTA Section */
  .cta-section {
    text-align: center;
  }

  .cta-section h2 {
    margin-bottom: var(--spacing-sm);
  }

  .cta-section p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .about-header {
      flex-direction: column;
      text-align: center;
    }

    .profile-placeholder {
      width: 120px;
      height: 120px;
      font-size: var(--font-size-3xl);
    }
  }
</style>
