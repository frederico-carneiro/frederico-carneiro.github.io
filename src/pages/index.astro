---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <main>
    <section class="hero">
      <div class="hero-content">
        <h1>Frederico Carneiro</h1>
        <p class="hero-title">Art Director & Lead Artist</p>
        <p class="hero-statement">
          Art Director and Senior Game Developer with 7+ years of experience.
          Strong background in Environment art, 3D art, Weapon art and real-time visuals,
          with deep hands-on expertise in Unreal Engine 5.
        </p>
        <div class="hero-cta">
          <a href="#work" class="btn btn-primary">View Work</a>
          <a href="/portfolio/contact" class="btn btn-secondary">Contact</a>
        </div>
      </div>
      <div class="scroll-indicator" aria-hidden="true">
        <span></span>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: var(--spacing-md);
    position: relative;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero h1 {
    margin-bottom: var(--spacing-xs);
  }

  .hero-title {
    font-size: clamp(var(--font-size-xl), 2.5vw, var(--font-size-2xl));
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
    font-weight: var(--font-weight-normal);
  }

  .hero-statement {
    font-size: clamp(var(--font-size-base), 1.5vw, var(--font-size-lg));
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto var(--spacing-lg);
    line-height: var(--line-height-relaxed);
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--spacing-md);
    left: 50%;
    transform: translateX(-50%);
  }

  .scroll-indicator span {
    display: block;
    width: 24px;
    height: 40px;
    border: 2px solid var(--text-muted);
    border-radius: 12px;
    position: relative;
  }

  .scroll-indicator span::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background-color: var(--text-muted);
    border-radius: 2px;
    animation: scroll 2s ease-in-out infinite;
  }

  @keyframes scroll {
    0%, 100% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    50% {
      opacity: 0.5;
      transform: translateX(-50%) translateY(10px);
    }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .hero {
      padding: var(--spacing-sm);
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
      max-width: 280px;
    }

    .hero-cta .btn {
      width: 100%;
    }
  }
</style>
