---
import BaseLayout from '../layouts/BaseLayout.astro';
import SideNav from '../components/SideNav.astro';
import Lightbox from '../components/Lightbox.astro';
import NextProject from '../components/NextProject.astro';

const sections = [
  { id: 'overview', label: 'Overview' },
  { id: 'about-project', label: 'About' },
];
---

<BaseLayout title="Circle Arena" description="Case study for Circle Arena">
  <SideNav sections={sections} />
  <Lightbox />

  <main class="snap-container snap-disabled">
    <!-- Section 1: Overview / Hero -->
    <section id="overview" class="snap-section section-hero">
      <div class="section-bg">
        <img src="/images/circle-arena/hero-bg.webp" alt="Circle Arena environment" loading="eager" width="1920" height="1080" />
      </div>
      <div class="section-overlay"></div>
      <div class="section-content">
        <h1>CIRCLE ARENA</h1>
        <p class="project-roles">Associate Art Director | Lead & Senior Artist</p>
        <p class="project-specialization">Environment, Weapons & 3D</p>
      </div>
    </section>

    <!-- Section 2: About the Project -->
    <section id="about-project" class="snap-section section-about-project">
      <div class="about-project-content">
        <div class="about-project-text" data-reveal>
          <h2>About This Project</h2>
          <h3 class="about-subtitle">Environment Workflow Test (Unreal Engine 5)</h3>
          <p>
            This environment was created as an early <strong>workflow test</strong> when <strong>Unreal Engine 5</strong> was first released. The goal was to validate a <strong>rapid production pipeline</strong> using fully <strong>Nanite-enabled assets</strong>, sculpted in ZBrush and 3DCoat.
          </p>
          <p>
            The project followed a clear set of constraints: a simple <strong>arena-style environment</strong> designed for a fast-paced FPS game. The primary objective was to build the environment as quickly as possible while evaluating <strong>workflow efficiency</strong>, iteration speed, and <strong>optimization considerations</strong> within UE5.
          </p>
          <p>
            The project was completed in <strong>one month</strong> and developed primarily as a <strong>solo effort</strong>, with collaboration from one technical artist responsible for VFX and the creation of a <strong>custom shader layer system</strong>.
          </p>
        </div>
      </div>
    </section>

    <!-- Section 3: Image Gallery -->
    <section class="snap-section section-images">
      <div class="images-content">
        <div class="env-hero-image" data-reveal>
          <img src="/images/circle-arena/HighresScreenshot00003.webp" alt="Circle Arena — Environment overview" class="zoomable" width="1920" height="1080" />
        </div>
        <div class="env-image-row" data-reveal>
          <div class="env-image-half">
            <img src="/images/circle-arena/HighresScreenshot00004.webp" alt="Circle Arena — Environment detail" class="zoomable" width="1920" height="1080" />
          </div>
          <div class="env-image-half">
            <img src="/images/circle-arena/Circle_Arena_08.webp" alt="Circle Arena — Environment" class="zoomable" width="1920" height="1080" />
          </div>
        </div>
        <div class="env-image-row" data-reveal>
          <div class="env-image-half">
            <video src="/images/circle-arena/MetalEden_ArtStation_CA_03.mp4" autoplay loop muted playsinline width="960" height="540"></video>
          </div>
          <div class="env-image-half">
            <video src="/images/circle-arena/MetalEden_ArtStation_CA_04.mp4" autoplay loop muted playsinline width="960" height="540"></video>
          </div>
        </div>
        <div class="env-image-row" data-reveal>
          <div class="env-image-half">
            <video src="/images/circle-arena/MetalEden_Twitter_CA_01.mp4" autoplay loop muted playsinline width="960" height="540"></video>
          </div>
          <div class="env-image-half">
            <video src="/images/circle-arena/MetalEden_Twitter_CA_06.mp4" autoplay loop muted playsinline width="960" height="540"></video>
          </div>
        </div>
      </div>
    </section>

    <section class="gallery-cta" data-reveal>
      <p class="gallery-cta-text">Want to see more?</p>
      <a href="/gallery" class="btn btn-primary">View Full Gallery</a>
    </section>

    <NextProject
      title="METAL EDEN"
      href="/metal-eden"
      image="/images/metal-eden/hero-main.webp"
    />
  </main>
</BaseLayout>

<style>
  /* Snap Container */
  .snap-container {
    height: 100vh;
    overflow-y: auto;
    scroll-snap-type: y mandatory;
  }

  .snap-container.snap-disabled {
    scroll-snap-type: none;
  }

  @media (max-width: 768px) {
    .snap-container {
      scroll-snap-type: none;
      height: auto;
      overflow-y: visible;
    }
  }

  /* Snap Sections */
  .snap-section {
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: var(--spacing-lg);
    padding-top: calc(64px + var(--spacing-lg));
  }

  @media (max-width: 768px) {
    .snap-section {
      min-height: auto;
      padding: var(--spacing-xl) var(--spacing-md);
      padding-top: calc(64px + var(--spacing-md));
    }
  }

  /* Section Hero */
  .section-hero {
    text-align: center;
  }

  .section-bg {
    position: absolute;
    inset: 0;
    z-index: -2;
    overflow: hidden;
  }

  .section-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: kenBurns 20s ease-in-out infinite alternate;
  }

  @keyframes kenBurns {
    0% { transform: scale(1); }
    100% { transform: scale(1.08); }
  }

  .section-overlay {
    position: absolute;
    inset: 0;
    z-index: -1;
    background: linear-gradient(
      to bottom,
      rgba(14, 15, 17, 0.6) 0%,
      rgba(14, 15, 17, 0.35) 50%,
      rgba(14, 15, 17, 0.8) 100%
    );
  }

  .section-content {
    max-width: var(--content-width);
    width: 100%;
  }

  @keyframes heroFadeIn {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .section-hero h1 {
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
    opacity: 0;
    animation: heroFadeIn 0.8s ease-out 0.2s forwards;
  }

  .project-roles {
    font-size: var(--font-size-lg);
    color: var(--text-primary);
    opacity: 0;
    margin-bottom: 0;
    animation: heroFadeIn 0.8s ease-out 0.5s forwards;
  }

  .project-specialization {
    font-size: var(--font-size-base);
    color: rgba(255, 255, 255, 0.6);
    margin-top: -6px;
    opacity: 0;
    animation: heroFadeIn 0.8s ease-out 0.7s forwards;
  }

  .nda-notice {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: #AFC6D9;
    margin-top: var(--spacing-lg);
    opacity: 0;
    animation: heroFadeIn 0.8s ease-out 0.8s forwards;
  }

  .nda-cta {
    margin-top: var(--spacing-md);
    opacity: 0;
    animation: heroFadeIn 0.8s ease-out 1.1s forwards;
  }

  /* Section About Project */
  .section-about-project {
    background-color: var(--bg-secondary);
    min-height: auto;
    padding-top: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
  }

  .about-project-content {
    max-width: var(--content-width);
    width: 100%;
    text-align: center;
    margin: 0 auto;
  }

  .about-project-text h2 {
    margin-bottom: var(--spacing-sm);
  }

  .about-subtitle {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--accent);
    margin-bottom: var(--spacing-md);
  }

  .about-project-text p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .about-project-stats {
    display: flex;
    justify-content: space-around;
    gap: var(--spacing-lg);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-value {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: var(--font-weight-bold);
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin-bottom: var(--spacing-xs);
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .about-project-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .about-project-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-md);
      width: 100%;
    }
  }

  /* Section Split */
  .section-split {
    background-color: var(--bg-primary);
    min-height: auto;
    padding-top: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
  }

  .section-with-bg {
    position: relative;
    background-color: transparent;
  }

  .section-with-bg .section-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: rgba(14, 15, 17, 0.75);
  }

  .section-with-bg .split-content {
    position: relative;
    z-index: 2;
  }

  .split-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    max-width: var(--max-width);
    width: 100%;
    align-items: center;
  }

  .split-content-centered {
    grid-template-columns: 1fr;
    justify-items: center;
    text-align: center;
  }

  .split-content-centered .responsibility-list {
    text-align: left;
    display: inline-block;
  }

  .split-text h2 {
    margin-bottom: var(--spacing-md);
  }

  .responsibility-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .responsibility-list li {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    padding-left: var(--spacing-md);
    position: relative;
  }

  .responsibility-list li::before {
    content: '–';
    position: absolute;
    left: 0;
    top: 0;
    color: var(--text-muted);
    font-size: var(--font-size-lg);
  }

  @media (max-width: 768px) {
    .split-content {
      grid-template-columns: 1fr;
    }
  }

  /* Section Images */
  .section-images {
    background-color: var(--bg-primary);
    min-height: auto;
    padding: 0;
    flex-direction: column;
  }

  .images-content {
    width: 100%;
  }

  .env-hero-image {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .env-hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .env-image-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-top: 10px;
  }

  .env-image-half img,
  .env-image-half video {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .env-image-row {
      grid-template-columns: 1fr;
    }
  }

  /* Section Challenges */
  .section-challenges {
    background-color: var(--bg-secondary);
    min-height: auto;
    padding-top: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
  }

  .challenges-content {
    max-width: var(--max-width);
    width: 100%;
  }

  .challenges-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .challenges-content p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .challenges-content p + p {
    margin-top: var(--spacing-sm);
  }

  /* Gallery CTA */
  .gallery-cta {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-lg);
    background-color: var(--bg-primary);
  }

  .gallery-cta-text {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .snap-container {
      scroll-snap-type: none;
    }
  }
</style>
