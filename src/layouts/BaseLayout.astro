---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description = "Art Director and Senior Game Developer with 7+ years of experience. Strong background in Environment art, 3D art, Weapon art and real-time visuals, with deep hands-on expertise in Unreal Engine 5.",
  image = "/images/og-image.jpg",
  hideHeader = false,
  hideFooter = false,
} = Astro.props;

const siteTitle = "Frederico Carneiro | Art Director & Lead Artist";
const fullTitle = title === "Home" ? siteTitle : `${title} | Frederico Carneiro`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Frederico Carneiro" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Frederico Carneiro Portfolio" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <!-- Fonts - Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#0E0F11" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    {!hideHeader && <Header />}
    <div id="main-content">
      <slot />
    </div>
    {!hideFooter && <Footer />}

    <!-- GoatCounter Analytics -->
    <script data-goatcounter="https://fredericocarneiro.goatcounter.com/count"
            async src="//gc.zgo.at/count.js"></script>
  </body>
</html>

<style is:global>
  /* Ensure body takes full height for footer positioning */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Add padding for fixed header */
  body > main {
    flex: 1;
  }
</style>
