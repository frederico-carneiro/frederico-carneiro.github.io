---
interface Props {
  title: string;
  roles: string[];
  image: string;
  href: string;
  featured?: boolean;
  trailerUrl?: string;
  description?: string;
  keyContributions?: string[];
}

const { title, roles, image, href, featured = false, trailerUrl, description, keyContributions } = Astro.props;
---

<article class:list={['project-card', { featured }]}>
  <a href={href} class="card-link">
    <div class="card-image">
      <img src={image} alt={`${title} project thumbnail`} loading="lazy" />
    </div>
    <div class="card-gradient"></div>
    <div class="card-content">
      <h3 class="card-title">{title}</h3>
      <p class="card-roles">{roles.join(' Â· ')}</p>
      {description && <p class="card-description">{description}</p>}
    </div>
    <div class="card-cta">
      <span class="cta-label">View Case Study <span aria-hidden="true">&rarr;</span></span>
    </div>
  </a>
</article>

<style>
  .project-card {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    overflow: hidden;
    background-color: var(--bg-secondary);
  }

  .card-link {
    display: block;
    position: relative;
    aspect-ratio: 21 / 9;
    text-decoration: none;
    color: inherit;
  }

  .card-link:hover {
    color: inherit;
  }

  .card-image {
    position: absolute;
    inset: 0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-card:hover .card-image img {
    transform: scale(1.03);
  }

  .card-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(14, 15, 17, 0.9) 0%,
      rgba(14, 15, 17, 0.5) 35%,
      rgba(14, 15, 17, 0.05) 60%,
      transparent 100%
    );
    transition: background 0.4s ease;
  }

  .project-card:hover .card-gradient {
    background: linear-gradient(
      to top,
      rgba(14, 15, 17, 0.95) 0%,
      rgba(14, 15, 17, 0.6) 40%,
      rgba(14, 15, 17, 0.15) 65%,
      transparent 100%
    );
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2.5rem 3rem;
    z-index: 1;
  }

  .card-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: 0.02em;
    color: var(--text-primary);
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
    margin-bottom: 0.375rem;
  }

  .card-roles {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    letter-spacing: 0.02em;
    margin-bottom: 0.5rem;
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--text-muted);
    max-width: 500px;
    line-height: var(--line-height-normal);
  }

  .card-cta {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 2.5rem 3rem;
    z-index: 1;
    opacity: 0;
    transform: translateY(8px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .project-card:hover .card-cta {
    opacity: 1;
    transform: translateY(0);
  }

  .cta-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-primary);
    letter-spacing: 0.04em;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Focus state */
  .card-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: -2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card-image img,
    .card-gradient,
    .card-cta {
      transition: none;
    }

    .project-card:hover .card-image img {
      transform: none;
    }

    .card-cta {
      opacity: 1;
      transform: none;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-link {
      aspect-ratio: 16 / 9;
    }

    .card-content {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.75rem;
    }

    .card-roles {
      font-size: 0.8125rem;
    }

    .card-description {
      display: none;
    }

    .card-cta {
      opacity: 1;
      transform: none;
      padding: 1.5rem;
    }

    .cta-label {
      font-size: 0.75rem;
    }
  }
</style>
