---
interface Props {
  title: string;
  roles: string[];
  image: string;
  href: string;
  featured?: boolean;
  trailerUrl?: string;
  description?: string;
  keyContributions?: string[];
}

const { title, roles, image, href, featured = false, trailerUrl, description, keyContributions } = Astro.props;
---

<article class:list={['project-card', { featured }]}>
  <div class="project-info">
    <h3 class="project-title">{title}</h3>
    {description && <p class="project-description">{description}</p>}
    <div class="project-details">
      <div class="detail-group">
        <span class="detail-label">Roles</span>
        <p class="detail-content">{roles.join(' · ')}</p>
      </div>
      {keyContributions && (
        <div class="detail-group">
          <span class="detail-label">Key Contributions</span>
          <p class="detail-content">{keyContributions.join(' · ')}</p>
        </div>
      )}
    </div>
  </div>
  <div class="project-image">
    <img src={image} alt={`${title} project thumbnail`} loading="lazy" />
    <div class="project-overlay">
      <div class="overlay-buttons">
        {trailerUrl && (
          <a href={trailerUrl} class="view-cta" target="_blank" rel="noopener noreferrer">
            <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M8 5v14l11-7z"/>
            </svg>
            Game trailer
          </a>
        )}
        <a href={href} class="view-cta">More..</a>
      </div>
    </div>
  </div>
</article>

<style>
  .project-card {
    position: relative;
  }

  .project-info {
    margin-bottom: 2.25rem; /* 36px - significant gap before image */
  }

  .project-title {
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 0.5rem; /* 8px - tight, description belongs to title */
    transition: color var(--transition-fast);
  }

  .project-card:hover .project-title {
    color: var(--accent);
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--text-muted);
    opacity: 0.75;
    margin-bottom: 1.5rem; /* 24px - breathing room before roles section */
  }

  .project-details {
    display: flex;
    flex-direction: column;
  }

  .detail-group {
    display: flex;
    flex-direction: column;
    gap: 0.375rem; /* 6px - label introduces its content */
  }

  .detail-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 700;
  }

  .detail-content {
    font-size: 0.875rem;
    color: var(--text-secondary);
    letter-spacing: 0.01em;
    line-height: var(--line-height-relaxed);
  }

  .project-image {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: 4px; /* Minimal - sharp, editorial feel */
    background-color: var(--bg-secondary);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .project-card:hover .project-image img {
    transform: scale(1.03);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(14, 15, 17, 0);
    transition: background-color var(--transition-base);
  }

  .project-card:hover .project-overlay {
    background-color: rgba(14, 15, 17, 0.6);
  }

  .overlay-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .view-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--text-primary);
    color: var(--bg-primary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-sm);
    text-decoration: none;
    opacity: 0;
    transform: translateY(10px);
    transition: all var(--transition-base);
  }

  .view-cta:hover {
    background-color: var(--accent);
  }

  .play-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .project-card:hover .view-cta {
    opacity: 1;
    transform: translateY(0);
  }

  /* Featured variant - larger */
  .featured .project-image {
    aspect-ratio: 21 / 9;
  }

  .featured .project-title {
    font-size: 2.5rem;
  }

  /* Focus state for accessibility */
  .view-cta:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .project-image img,
    .view-cta,
    .project-overlay {
      transition: none;
    }

    .project-card:hover .project-image img {
      transform: none;
    }

    .view-cta {
      opacity: 1;
      transform: none;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .featured .project-image {
      aspect-ratio: 16 / 9;
    }

    .featured .project-title {
      font-size: var(--font-size-2xl);
    }

    .view-cta {
      opacity: 1;
      transform: none;
    }
  }
</style>
