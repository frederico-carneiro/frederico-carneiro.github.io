<button class="scroll-toggle" aria-pressed="false" title="Toggle snap scrolling">
  <span class="toggle-label">Snap</span>
  <span class="toggle-switch">
    <span class="toggle-knob"></span>
  </span>
</button>

<style>
  .scroll-toggle {
    position: fixed;
    bottom: var(--spacing-md);
    right: var(--spacing-md);
    z-index: 50;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-full);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .scroll-toggle:hover {
    border-color: var(--text-muted);
  }

  .scroll-toggle:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
    border-color: var(--text-muted);
  }

  .toggle-label {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toggle-switch {
    width: 36px;
    height: 20px;
    background-color: var(--text-muted);
    border-radius: var(--radius-full);
    position: relative;
    transition: background-color var(--transition-fast);
  }

  .scroll-toggle[aria-pressed="true"] .toggle-switch {
    background-color: var(--text-primary);
  }

  .toggle-knob {
    position: absolute;
    top: 2px;
    left: 2px;
    width: 16px;
    height: 16px;
    background-color: var(--bg-primary);
    border-radius: 50%;
    transition: transform var(--transition-fast);
  }

  .scroll-toggle[aria-pressed="true"] .toggle-knob {
    transform: translateX(16px);
  }

  /* Hide on mobile - snap is always off on touch devices */
  @media (max-width: 768px) {
    .scroll-toggle {
      display: none;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.scroll-toggle');
  const snapContainer = document.querySelector('.snap-container');

  toggle?.addEventListener('click', () => {
    const isPressed = toggle.getAttribute('aria-pressed') === 'true';
    toggle.setAttribute('aria-pressed', (!isPressed).toString());
    snapContainer?.classList.toggle('snap-disabled', isPressed);
  });
</script>
